{
    "seed": 1,
    "log_steps": 200,
    "save_steps": 5000,
    "dataset": "3dmatch",
    "runname": "cast",
    "log_dir": "./logs/3dmatch/",
    "snapshot_dir": "./ckpt/3dmatch/",
    "data_list": "./data/3dmatch_list/",

    "data": {
        "root": "/home/jacko/Downloads/3dmatch/",
        "num_workers": 4,
        "npoints": 30000,
        "voxel_size": 0.025,
        "augment": 0.5
    },

    "model": {
        "kpconv_layers": 4,
        "voxel_size": 0.025,
        "input_dim": 1,
        "init_dim": 64,
        "kernel_size": 15,
        "init_radius": 0.0625,
        "init_sigma": 0.05,
        "neighbor_limits": [26, 21, 22, 25],

        "k": 12,
        "spots": 4,
        "down_k": 4,
        "spot_k": 12,
        "dense_neighbors": 6,
        "input_dim_f": 512,
        "input_dim_c": 1024,
        "output_dim": 256,
        "hidden_dim": 128,
        "desc_dim": 32,
        "num_heads": 4,
        "dropout": null,
        "activation_fn": "relu",
        "sigma_d": 0.2,
        "sigma_a": 15,
        "angle_k": 3,
        "reduction_a": "max",
        "sigma_c": 0.15,
        "seed_threshold": 0.3,
        "seed_num": 48,
        "blocks": 3,
        
        "sigma_r": 0.075,
        "use_overlap_head": true,
        "overlap_threshold": 0.1,
        "keypoint_node_threshold": 0.1,
        "local_matching_radius": 0.15,
        "dual_normalization": true,
        
        "patch_k": 16,
        "num_neighbors": 4,
        "learnable_matcher": true,
        "filter_layers": 3,
        "filter_sigma_d": 0.1,
        
        "ransac": true,
        "ransac_filter": 0.1
    },

    "optim": {
        "lr": 1e-4,
        "step_size": 5,
        "weight_decay": 1e-4,
        "gamma": 0.9,
        "max_epoch": 6,
        "clip_grad_norm": 0.5
    },
    
    "loss": {
        "positive_margin": 0.1,
        "negative_margin": 1.4,
        "positive_optimal": 0.1,
        "negative_optimal": 1.4,
        "log_scale": 24,
        "positive_overlap": 0.1,
        
        "r_p": 0.05,
        "r_n": 0.06,

        "weight_det_loss": 1.0,
        "weight_spot_loss": 0.1,
        "weight_feat_loss": 0.5,
        "weight_desc_loss": 1.0,
        "weight_overlap_loss": 1.0,
        "weight_corr_loss": 10.0,
        "weight_trans_loss": 5.0,
        "weight_rot_loss": 20.0,
        "pretrain_feat_epochs": 1
    },

    "eval": {
        "hit_threshold": 0.05,
        "acceptance_overlap": 0.0,
        "rmse_threshold": 0.2,
        "inlier_distance_threshold": 0.1,
        "inlier_ratio_threshold": 0.05
    }
}